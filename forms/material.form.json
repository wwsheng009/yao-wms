{
  "name": "物资",
  "action": { "bind": { "model": "material" } },
  "layout": {
    "actions": [
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "确认删除",
              "content": "删除后不可撤销！"
            }
          },
          {
            "name": "Delete",
            "payload": {
              "model": "material"
            },
            "type": "Form.delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete"
      }
    ],
    "form": {
      "sections": [
        {
          "title": "Section 1",
          "columns": [
            { "name": "名称", "width": 12 },
            { "name": "厂商", "width": 12 },
            { "name": "类目", "width": 6 }
          ]
        },
        {
          "title": "Section 2",
          "columns": [
            { "name": "图表", "width": 24 },
            { "name": "图片", "width": 24 },
            { "name": "介绍", "width": 24 }
          ]
        }
      ]
    }
  },
  "fields": {
    "form": {
      "介绍": {
        "bind": "detail",
        "edit": {
          "props": {
            "autoSize": { "maxRows": 6, "minRows": 2 },
            "placeholder": "请输入 介绍"
          },
          "type": "TextArea"
        }
      },
      "厂商": {
        "bind": "supplier_id",
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "rules": [{ "required": true }]
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "supplier",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          }
        }
      },
      "名称": {
        "bind": "name",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [{ "required": true }]
            },
            "placeholder": "请输入 名称"
          },
          "type": "Input"
        },
        "view": { "props": {}, "type": "" }
      },
      "图片": {
        "bind": "images",
        "edit": {
          "type": "Upload",
          "compute": "Upload",
          "props": {
            "filetype": "image",
            "$api": {
              "process": "fs.system.Upload"
            }
          }
        },
        "view": {
          "type": "Image",
          "compute": "Download",
          "props": {}
        }
      },
      "图表": {
        "bind": "icon",
        "edit": {
          "type": "Upload",
          "compute": "Upload",
          "props": {
            "filetype": "image",
            "$api": {
              "process": "fs.system.Upload"
            }
          }
        },
        "view": {
          "type": "Image",
          "compute": "Download",
          "props": {
            "style": {}
          }
        }
      },
      "类目": {
        "bind": "category_id",
        "edit": {
          "type": "Select",
          "props": {
            "itemProps": {
              "rules": [{ "required": true }]
            },
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "material.category",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          }
        }
      }
    }
  }
}
