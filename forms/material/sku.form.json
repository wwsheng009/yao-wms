{
  "name": "单品",
  "action": {
    "bind": {
      "model": "material.sku",
      "option": {
        "withs": {}
      }
    },
    "save": { "process": "scripts.sku.Save" },
    "after:find": "scripts.sku.AfterFind",
    "before:delete": "scripts.sku.BeforeDelete"
  },
  "layout": {
    "actions": [
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete",
        "action": [
          {
            "name": "Confirm",
            "type": "Common.confirm",
            "payload": {
              "title": "确认删除",
              "content": "删除后不可撤销！"
            }
          },
          {
            "name": "Delete",
            "payload": {
              "model": "<MODEL_ID>"
            },
            "type": "Form.delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      }
    ],
    "config": { "full": true },

    "form": {
      "sections": [
        {
          "title": "物资信息",
          "columns": [
            { "name": "物资", "width": 12 },
            { "name": "单品标签", "width": 12 },
            { "name": "单位", "width": 12 },
            { "name": "规格清单", "width": 24 },
            { "name": "预警库存", "width": 12 },
            { "name": "状态", "width": 12 }
          ]
        },
        {
          "title": "价格信息",
          "columns": [
            { "name": "单价", "width": 12 },
            { "name": "税率", "width": 12 },
            { "name": "含税单价", "width": 12 },
            { "name": "列账单价", "width": 12 },
            { "name": "图集", "width": 24 },
            { "name": "介绍", "width": 24 }
          ]
        }
      ]
    },
    "primary": "id"
  },
  "fields": {
    "form": {
      "ID": {
        "bind": "id",
        "edit": {
          "props": { "disabled": true, "placeholder": "请输入 ID" },
          "type": "InputNumber"
        }
      },
      "介绍": {
        "bind": "detail",
        "edit": {
          "props": {
            "autoSize": { "maxRows": 6, "minRows": 2 },
            "placeholder": "请输入 介绍"
          },
          "type": "TextArea"
        }
      },
      "列账单价": {
        "bind": "fin_price",
        "edit": {
          "props": { "placeholder": "请输入 列账单价" },
          "type": "InputNumber"
        }
      },
      "单价": {
        "bind": "price",
        "edit": {
          "props": { "placeholder": "请输入 单价" },
          "type": "InputNumber"
        }
      },
      "单位": {
        "bind": "unit",
        "edit": { "props": { "placeholder": "请输入 单位" }, "type": "Input" },
        "view": { "props": {}, "type": "" }
      },
      "含税单价": {
        "bind": "tax_price",
        "edit": {
          "props": { "placeholder": "请输入 含税单价" },
          "type": "InputNumber"
        }
      },
      "图集": {
        "bind": "images",
        "edit": {
          "type": "Upload",
          "compute": "Upload",
          "props": {
            "filetype": "image",
            "$api": {
              "process": "fs.system.Upload"
            }
          }
        },
        "view": {
          "type": "Image",
          "compute": "Download",
          "props": {
            "style": {
              "width": 36,
              "height": 36,
              "borderRadius": "50%"
            }
          }
        }
      },

      "物资": {
        "bind": "material_id",
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "material",
                  "label": "name",
                  "value": "id",
                  "limit": "3000"
                }
              }
            }
          },
          "type": "Select"
        }
      },
      "状态": {
        "bind": "status",
        "edit": {
          "props": {
            "options": [
              { "label": "在产", "value": "在产" },
              { "label": "停产", "value": "停产" }
            ],
            "placeholder": "请选择 状态"
          },
          "type": "Select"
        }
      },
      "税率": {
        "bind": "tax_rate",
        "edit": {
          "props": { "placeholder": "请输入 税率" },
          "type": "InputNumber"
        }
      },
      "单品标签": {
        "bind": "sku_sn",
        "edit": { "props": { "placeholder": "请输入 编码" }, "type": "Input" },
        "view": { "props": {}, "type": "" }
      },
      "规格清单": {
        "bind": "specs_list",
        "edit": {
          "props": {
            "name": "material.spec",
            "showLabel": true
          },
          "type": "List"
        }
      },
      "预警库存": {
        "bind": "stock",
        "edit": {
          "props": { "placeholder": "请输入 预警库存" },
          "type": "InputNumber"
        }
      }
    }
  }
}
